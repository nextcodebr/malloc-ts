    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Current Jest Test",
        "type": "node",
        "request": "launch",
        "runtimeArgs": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "${file}", "--passWithNoTests","--no-cache", "--runInBand", "--coverage", "false"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "NODE_OPTIONS": "--max_old_space_size=2048"
        }
      }
    ]
}

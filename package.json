{
  "name": "@nxcd/ts-malloc",
  "version": "1.0.0",
  "description": "Mem utilities",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main",
    "clean": "rimraf dist",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --verbose true --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:coverage": "npm test -- --coverage",
    "prepare": "husky install",
    "predist": "npm run clean && npm run build && node dist/setup.js && rm -f dist/setup*",
    "dist:publish": "npm run predist && cd dist && npm publish"
  },
  "keywords": [
    "memory",
    "malloc"
  ],
  "author": "Cleber Muramoto",
  "license": "ISC",
  "engines": {
    "node": "16.x"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.4.7",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "eslint": "^7.31.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-mock-extended": "^1.0.18",
    "lint-staged": "^11.1.1",
    "random": "^3.0.6",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5",
    "uuidv4": "^6.2.12"
  }
}
